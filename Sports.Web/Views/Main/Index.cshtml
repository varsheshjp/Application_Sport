@using Sports.DomainModel.Models;
@using Sports.DomainModel;
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<div class="container">
    <form method="post" asp-controller="Main" asp-action="Login"
          asp-route-returnurl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" class="checkbox" />
            <span asp-validation-for="RememberMe"></span>
        </div>
        <input type="submit" value="Login" class="btn btn-primary" />
        <a asp-action="Register" asp-controller="Main" class="btn btn-primary">Register</a>
    </form>
</div>